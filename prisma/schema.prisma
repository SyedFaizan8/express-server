generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id              String    @id @default(uuid())
  fullname             String
  username             String    @unique
  email                String    @unique
  bio                  String?
  password             String
  refreshToken         String?
  website              String?
  imageId              String?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  created_at           DateTime  @default(now())

  history     History[]
  stats       TotalStatistics?
  leaderboard Leaderboard?
}

model History {
  history_id String   @id @default(uuid())
  user_id    String
  wpm        Int
  accuracy   Decimal  @db.Decimal(5, 2)
  date       DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model TotalStatistics {
  user_id             String @id
  total_tests_taken   Int
  total_letters_typed Int
  total_words_typed   Int
  total_time_typing   Int

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Leaderboard {
  user_id          String   @id
  highest_wpm      Int
  highest_accuracy Decimal  @db.Decimal(5, 2)
  time             Int
  achieved_at      DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id])
}
